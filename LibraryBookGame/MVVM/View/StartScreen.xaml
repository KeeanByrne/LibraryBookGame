<UserControl x:Class="LibraryBookGame.MVVM.View.StartScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:viewModel="clr-namespace:LibraryBookGame.MVVM.ViewModel" d:DataContext="{d:DesignInstance Type=viewModel:MainViewModel}"
             mc:Ignorable="d" 
             Height="600" Width="950"
             >

    <Border Background="Black" CornerRadius="50" BorderBrush="#18957A" BorderThickness="5">
        <Grid>
            <TextBlock Text="Welcome to the Dewey Skills Testing Game" Foreground="White" HorizontalAlignment="Center" Height="55" FontSize="40" Margin="0,-225,0,0"/>
            <Button x:Name="GetStarted" Content="Get Started!" Width="100" Height="50" FontSize="17" BorderBrush="White" BorderThickness="2" Background="Black" Foreground="White" HorizontalAlignment="Center" Style="{DynamicResource RoundButton}" Click="GetStarted_Click" Command="{Binding ReplacingBooksCommand}"/>

        </Grid>
    </Border>
</UserControl>
