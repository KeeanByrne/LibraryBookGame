        <TextBlock Text="Finding Call Numbers"
                   Foreground="White"
                   FontSize="28"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <Border Width="684"
                Height="388"
                Background="#8391A1"
                CornerRadius="30"
                BorderThickness="5"
                BorderBrush="Black">


            <Grid>
