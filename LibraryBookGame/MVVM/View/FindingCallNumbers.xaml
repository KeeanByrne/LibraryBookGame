                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center" 
                            Background="#8391A1" 
                            Height="300" Width="500">

                    <Image Source="/Images/Crane.png" />
                    <TextBlock Text="This page is no longr under construction" Margin="-140,150,0,0" />
